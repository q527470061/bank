                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="转账汇款"
                android:textSize="14sp"
                android:textColor="@color/bg_black"/>

        </RelativeLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:layout_weight="1"
            android:id="@+id/bill_menu">

            <ImageView
                android:id="@+id/img_function3"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/menu3" />

            <TextView
                android:id="@+id/txt_function3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_function3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="账单"
                android:textSize="14sp"
                android:textColor="@color/bg_black"/>

        </RelativeLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/img_function4"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/menu4" />

            <TextView
                android:id="@+id/txt_function4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_function4"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="贷款"
                android:textSize="14sp"
                android:textColor="@color/bg_black"/>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
