<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.star.bank.CardContentActivity"
    android:orientation="vertical"
    android:background="@mipmap/card3">

    <TextView
        android:paddingTop="20dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="查询结果"
        android:textSize="30sp"
        android:textColor="@color/text_blue"/>

    <LinearLayout
        android:paddingTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_weight="1"
                style="@style/card_content"
                android:text="卡号"/>

            <TextView
                android:id="@+id/content_carid"
                android:layout_weight="1"
                style="@style/card_content"
                android:text="12434343535"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_weight="1"
                style="@style/card_content"
                android:text="身份证号"/>

            <TextView
                android:id="@+id/content_userid"
                android:layout_weight="1"
                style="@style/card_content"
                android:text="12434343535"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_weight="1"
                style="@style/card_content"
                android:text="余额"/>

            <TextView
                android:id="@+id/content_money"
                android:layout_weight="1"
                style="@style/card_content"
                android:text="12434343535"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_weight="1"
                style="@style/card_content"
                android:text="日最高额度"/>

            <TextView
                android:id="@+id/content_max"
                android:layout_weight="1"
                style="@style/card_content"
                android:text="12434343535"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_weight="1"
                style="@style/card_content"
                android:text="开户日期"/>

            <TextView
                android:id="@+id/content_date"
                android:layout_weight="1"
                style="@style/card_content"
                android:text="12434343535"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
